{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "ES5",
    "sourceMap": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "pretty": true,
    "newLine": "lf",
    "baseUrl": "./src/",
    "paths": {
      "#/*": [
        "*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "**/**.test.ts",
    "__test__/**/*",
    "node_modules/@types/**/*",
  ],
  "exclude": [
    "**/*.test.ts",
    "__test__/**/*",
  ]
}